<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Liste des Salles</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0px;
            background-color: #000;
            color: #fff;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #000;            
            border-bottom: 2px solid #fff;
            padding-bottom: 10px;

        }

        h2 {
            text-align: left;
            margin-bottom: 20px;
            color: rgb(255, 0, 0);
            
            line-height: normal;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            border: 1px solid #fff;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #333;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        strong {
            font-weight: bold;
        }

        .btn {
            padding: 5px 10px;
            margin-left: 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
        }

        .btn-update {
            background-color: #007bff;
            color: white;
            border: none;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn-reserver {
            background-color: #28a745;
            color: white;
            border: none;
        }

        .btn:hover {
            opacity: 0.8;
        }

        a {
            color: #fff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <%- include('navbar') %>

    <h1>Liste des Salles</h1>

    <h2> <a href="/salle/nouvelle" style="background-color: #fff; color:black;;">AjouterSalle</a></h2>
    <h3> <a href="/calendar/ca" style="background-color: #fff; color:black;;">calendar</a></h3>


    <ul>
        <% salles.forEach(function(salle) { %>
            <li>
                <strong>name:</strong> <%= salle.name %>,
                <strong>Capacité:</strong> <%= salle.capacity %>, 
                <strong>Équipement:</strong> <%= salle.equipment %>, 
                <button class="btn btn-update" onclick="updateSalle('<%= salle._id %>')">Update</button>
                <button class="btn btn-delete" onclick="deleteSalle('<%= salle._id %>')">Delete</button>
                <button class="btn btn-reserver" onclick="reserverSalle('<%= salle._id %>')">Réserver Salle</button>
            </li>
        <% }); %>
    </ul>

    
    <script>
        function reserverSalle(id) {
            // Rediriger vers la page de création de réservation avec l'ID de la salle
            window.location.href = '/reservation/create/' + id;
        }

        function updateSalle(id) {
            // Rediriger vers la page d'édition avec l'ID de la salle
            window.location.href = '/salle/update/' + id;
        }

        function deleteSalle(id) {
            if (confirm('Êtes-vous sûr de vouloir supprimer cette salle ?')) {
                // Envoyer une requête DELETE pour supprimer la salle
                fetch('/salle/' + id, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                });     
                window.location.href = window.location.href;     
            }
        }
    </script>
    
<%- include('footer') %>
</body>
</html>